<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:background="#000000"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent" 
    >  

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_control"
        android:orientation="horizontal"
        >
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"   
        android:layout_height="0dp"
        android:layout_weight="1.5"  
        >
        
        <SurfaceView  
	        android:layout_width="fill_parent"   
	        android:layout_height="fill_parent"
	        android:id="@+id/surfaceView"  
	        android:background="@drawable/button1"
        />  
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/progressbar"
	        android:gravity="center"
            >
	       <ProgressBar
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:indeterminate="false"
	         />
	       
	       <TextView android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="正在缓冲...."/>
       </LinearLayout>
       
       <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:visibility="gone"
	        android:id="@+id/mediaplayprogress"
	        android:gravity="center"
            >
	       <TextView android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="播放视频出错！"/>
       </LinearLayout>
        
        <LinearLayout 
        	android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentTop="true" 
	        android:layout_centerHorizontal="true"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal"
	        android:id="@+id/linercenter_top"
	        android:background="@drawable/player_progresslayout_bg"
        >
      			<TextView  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" />
			    <ImageView 
			          android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:layout_weight="0.8"
			          android:src="@drawable/volume_min_icon"
			          android:layout_marginTop="10dp"
			          android:layout_marginLeft="10dp"
			          android:scaleType="fitXY"
			          />
			     <SeekBar
	                android:id="@+id/sound"
	                android:layout_width="0dp"
				    android:layout_marginTop="5dp"
				    android:layout_weight="2"
				    android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:background="@drawable/voice_seekbar_bg"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:progressDrawable="@drawable/button1"
	                android:thumb="@drawable/voice_thumb_normal" />
		         <ImageView 
			          android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:src="@drawable/volume_max_icon"
			          android:layout_weight="0.8"
			          android:layout_marginTop="10dp"
			          android:layout_marginLeft="10dp"
			          android:scaleType="fitXY"
			         />
		         <TextView  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" />
         </LinearLayout>
        
	     <LinearLayout 
        	android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:orientation="vertical"
	        android:id="@+id/linercenter"
	        android:background="@drawable/player_progresslayout_bg"
        >
	         <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            >
	
	            <TextView
	                android:id="@+id/showTime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:text="00:00"
	                android:textColor="@android:color/white"
	                android:textSize="12sp"
	                android:textStyle="bold" />
	
	            <TextView
	                android:id="@+id/allTime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:text="00:00"
	                android:textColor="@android:color/white"
	                android:textSize="12sp"
	                android:textStyle="bold" />
	            
	            <SeekBar
	                android:id="@+id/seekbar"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_toLeftOf="@id/allTime"
	                android:layout_toRightOf="@id/showTime"
	                android:background="@drawable/player_progress_bg"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:progressDrawable="@drawable/button1"
	                android:thumb="@drawable/media_player_progress_button" />
	        </RelativeLayout>
	         
	        <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
	        	>
		       
	            <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:gravity="center_horizontal"
			        android:layout_centerHorizontal="true"
			        android:background="@drawable/player_progresslayout_bg"
	        	>
	        		<TextView  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
			        <ImageButton  
			            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"  
			            android:src="@drawable/button1"  
			            android:id="@+id/flashBack"  
			            />  
			        
			         <ImageButton  
			            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   
			            android:src="@drawable/pause_button_pressed"  
			            android:id="@+id/pause"  
			            />  
			     	<ImageButton  
			            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   
			            android:src="@drawable/button1"  
			            android:id="@+id/flashPlaye"  
			            />
			     	<TextView  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />  
		          </LinearLayout>
	          </RelativeLayout>
    	</LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_progress"
        android:orientation="vertical"
        >
    </LinearLayout>
</LinearLayout>  