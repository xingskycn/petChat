<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"   
	android:focusableInTouchMode="true"
    android:orientation="vertical" >


    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical" >
	
        <include layout="@layout/head_title"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="8"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <ProgressBar
	            android:id="@+id/formclient_pb"
	            style="@android:style/Widget.ProgressBar.Horizontal"
	            android:layout_width="fill_parent"
	            android:layout_height="30.0dip"
	            android:max="100"
	            android:visibility="gone" />
	    </LinearLayout>
	
	    <ListView
	        android:id="@+id/formclient_listview"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:background="#e8edee"
	        android:cacheColorHint="@null"
	        android:divider="@null"
	        android:listSelector="@android:color/transparent"
	        android:stackFromBottom="true" />
	    
	    <LinearLayout
	        android:id="@+id/rl_bottom"
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:background="@drawable/chat_buttom_bg"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
        	>
	        <LinearLayout
	            android:id="@+id/ll_anniu"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	            <Button
	                android:id="@+id/chatting_biaoqing_btn"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:layout_height="45dp"
	                android:background="@drawable/chat_biaoqing_button_select"
	                android:visibility="visible" />
	
	            <Button
	                android:id="@+id/chat_add_button"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:layout_height="45dp"
	                android:background="@drawable/chat_add_button_select"
	                android:visibility="visible"
	                />
	            
	            <EditText
	                    android:id="@+id/formclient_text"
	                    android:layout_width="0dp"
	                    android:layout_weight="4.8"
	                    android:layout_height="fill_parent"
	                    android:singleLine="true"
	                    android:background="#00000000"
	                    android:layout_marginLeft="5dp"
	                    android:paddingLeft="10dp"
	                    android:textSize="18sp" />
				<Button
	                    android:id="@+id/chat_language_button"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_height="45dp"
	                    android:layout_marginLeft="15dip"
	                    android:layout_marginRight="3dip"
	                    android:background="@drawable/chat_language_select"
	                    android:paddingTop="5.0dip"
	                    />
				<Button
	                    android:id="@+id/chat_send_button"
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_height="45dp"
	                    android:layout_marginLeft="15dip"
	                    android:layout_marginRight="3dip"
	                    android:paddingTop="5.0dip"
	                    android:text="发送"
	                    android:visibility="gone"
	                    />
	            <LinearLayout
	                android:id="@+id/ll_yuyin"
	                android:layout_width="0dp"
	                android:layout_weight="7"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@+id/ll_anniu"
	                android:orientation="horizontal"
	                android:paddingTop="6.0dip"
	                android:visibility="gone" >
	
	                <Button
	                    android:id="@+id/chatting_keyboard_btn"
	                    android:layout_width="210dip"
	                    android:layout_height="45dp"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginRight="20dip"
	                    android:background="@drawable/chat_send_btn"
	                    android:paddingTop="5.0dip"
	                    android:text="按住  说话" />
	            </LinearLayout>  
	        </LinearLayout>
	
	        
	       
	    </LinearLayout>
	    
	       <android.support.v4.view.ViewPager
	            android:id="@+id/viewpager"
	            android:layout_width="wrap_content"
	            android:layout_height="135dip"
	            android:layout_below="@+id/ll_anniu"
	            android:layout_gravity="center"
	            android:background="#f32f33"
	            android:visibility="gone" >
	        </android.support.v4.view.ViewPager>
	    <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:background="#bac0c6"/>
	    <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="125dip"
	                android:orientation="horizontal"
	                android:id="@+id/chat_add_more"
	                android:background="#FFFFFF"
	                android:padding="10dp"
	                android:visibility="gone" >
	       	<LinearLayout 
	       	     android:layout_width="0dp"
	             android:layout_weight="1"
	             android:layout_height="wrap_content"
	             android:orientation="vertical"
	             android:gravity="center_horizontal"
	             android:layout_marginRight="10dp"
	       	    >
	            <Button 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/chat_add_image_select"
	                android:id="@+id/chat_image_button"
	                />
	            <TextView android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" android:text="图片" android:textColor="#acb2b7" android:textSize="18dp"/>
	        </LinearLayout>
	        <LinearLayout 
	       	     android:layout_width="0dp"
	             android:layout_weight="1"
	             android:layout_height="wrap_content"
	             android:orientation="vertical"
	             android:gravity="center_horizontal"
	             android:layout_marginRight="10dp"
	       	    >
	            <Button 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/chat_add_photo_select"
	                android:id="@+id/chat_Camera_button"
	                />
	            <TextView android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" android:text="拍照" android:textColor="#acb2b7" android:textSize="18dp"/>
	        </LinearLayout>
	        <LinearLayout 
	       	     android:layout_width="0dp"
	             android:layout_weight="1"
	             android:layout_height="wrap_content"
	             android:orientation="vertical"
	             android:gravity="center_horizontal"
	             android:layout_marginRight="10dp"
	       	    >
	            <Button 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/chat_add_vedio_select"
	                android:id="@+id/chat_vedio_button"
	                />
	            <TextView android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" android:text="摄像" android:textColor="#acb2b7" android:textSize="18dp"/>
	        </LinearLayout>
	        <LinearLayout 
	       	     android:layout_width="0dp"
	             android:layout_weight="1"
	             android:layout_height="wrap_content"
	             android:orientation="vertical"
	             android:gravity="center_horizontal"
	       	    >
	            <Button 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/chat_add_postition_select"
	                android:id="@+id/chat_position_button"
	                />
	            <TextView android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" android:text="位置" android:textColor="#acb2b7" android:textSize="18dp"/>
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>